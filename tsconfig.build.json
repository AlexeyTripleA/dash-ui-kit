{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist/react",
    "rootDir": "src/react",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node"
  },
  "include": [
    "src/react"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}